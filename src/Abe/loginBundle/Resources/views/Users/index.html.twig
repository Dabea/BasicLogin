{% extends '::base.html.twig' %}

{% block body -%}
    
    <div class="col-xs-8 col-xs-push-2 well">
         <a class="btn btn-primary btn-xs pull-right" href="{{ path('logout2') }}"> Logout</a> 
         <a class="btn btn-primary btn-xs " href="{{ path('homepage') }}"> Home Page</a>
    <h1>Users list</h1>
    
    <table class=" table table-striped table-bordered records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Password</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Age</th>
                <th>Address</th>
                <th>Phonenumber</th>
                <th>Cellnumber</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('main_users_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.password }}</td>
                <td>{{ entity.firstName }}</td>
                <td>{{ entity.lastName }}</td>
                <td>{{ entity.age }}</td>
                <td>{{ entity.address }}</td>
                <td>{{ entity.phoneNumber }}</td>
                <td>{{ entity.cellNumber }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('main_users_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('main_users_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('main_users_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    </div>
    {% endblock %}
